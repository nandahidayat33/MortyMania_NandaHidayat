<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    //pada bagian inilah permission ditambahkan karena kita kembutuhkan koneksi internet
    //setelah selesai, dilanjutkan dengan menambahkan layout, dilanjutkan pada file:
    //item_character.xml
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RickApplication"
        tools:targetApi="31">
        <activity
            android:name="com.utdi.nandahidayat.DetailRickActivity"
            android:exported="false" />
        <activity
            android:name="com.utdi.nandahidayat.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>