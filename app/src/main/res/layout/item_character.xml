<?xml version="1.0" encoding="utf-8"?>
//disini digunakan RelativeLayout untuk viewgrupnya, kemudian
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    //digunakan cardview untuk image
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_image_rick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    //dan terdapat 4 text view, yang berupa tampilan text untuk
    //nama, species, human, dan alive
    <TextView
        android:id="@+id/item_name_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spesies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name_rick"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="Species :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_species_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name_rick"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/spesies"
        android:text="Human"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_status_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spesies"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="Alive"
        android:textSize="18sp" />

</RelativeLayout>
